<manifest package="com.zhouchen.activity"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <dist:module
        dist:onDemand="true"
        dist:title="@string/dynamic_feature_scrolling">
        <dist:fusing dist:include="true" />
    </dist:module>

    <application>
        <activity android:name="com.zhouchen.activity.ScrollingActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>

</manifest>